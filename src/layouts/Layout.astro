---
import SpaceGrid from "../fx/spaceGrid/spaceGrid";

const { className, metaTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Ken Mallar â€¢ {metaTitle}</title>
  </head>
  <body class={className}>
    <slot />
    <SpaceGrid
      speed={0.5}
      squareSize={100}
      direction="diagonal"
      borderColor="#83288f"
      hoverFillColor=""
      client:load
    />
  </body>
</html>

<script src="/src/js/conversion.js" is:inline></script>

<script>
  document.addEventListener("astro:page-load", () => {
    const emailLink = document.getElementById("conversion");

    if (emailLink instanceof HTMLAnchorElement && emailLink.href) {
      const email = "kenmallar@internet.com";
      const convertedLink = `mailto:${email}?subject=Salut Ken Mallar!`;
      emailLink.setAttribute("href", convertedLink);
    }
  });
</script>
